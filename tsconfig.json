{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2016", "es2017.object", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "types": [
      "angular",
      "angular-animate",
      "angular-gettext",
      "angular-route",
      "angular-ui-bootstrap",
      "change-case",
      "jointjs",
      "jquery",
      "lodash",
      "modernizr",
      "moment"
    ]
  },
  "include": [ "src/**/*.ts", "node_modules/yti-common-ui/**/*.ts" ],
  "exclude": [ "types", "public", "src/**/*.d.ts", "src/**/*.spec.ts"]
}
